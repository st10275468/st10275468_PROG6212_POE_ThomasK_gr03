@model List<st10275468_PROG6212_POE_ThomasK_gr03.Models.Claim>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  
    <style>
        body {
            background-color: teal;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 0 auto;
            
           
            width: 100%;
        }

        .h1 {
            text-align: center;
           padding-top: 30px;
          
            font-size: 55px;
        }

        .row {
            display: flex;
            justify-content: space-between;

            gap: 100px; 
        }

        .column1{
            
            width: 25%;
            padding: 10px;
            
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        } .column {
            width: 55%; 
            padding: 10px;
            background-color: white;
            
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .column1 h2, .column h2 {
                color: teal;
                margin-bottom: 10px;
            }

        
        .form-group {
            margin-bottom: 5px;
        }

        label {
            display: block;
            color: teal;
            margin-bottom: 8px;
            font-weight: bold;
            text-align: left;
        }

        input[type="text"],
        input[type="email"],
        input[type="password"],
        select,
        input[type="number"],
        input[type="file"] {
            width: 100%;
            padding: 1px;
            box-sizing: border-box;
            border: 1px solid teal;
            font-size: 15px;
            border-radius: 1px;
        }

        button {
            width: 100%;
            padding: 5px;
            background-color: teal;
            color: white;
            border: none;
            border-radius: 1px;
            font-size: 18px;
            cursor: pointer;
        }

            button:hover {
                background-color: darkcyan;
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            color: black;
            border-bottom: 1px solid Teal;
            border-right: 1px solid Teal;
            border-left: 1px solid Teal;
        }

        th {
            background-color: teal;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }
        /*  OpenAI.2024. Chat-GPT(Version 3.5).[Large language model]. Available at: https://chat.openai.com/[Accessed: 9 September 2024]. */
    </style>
</head>
<body>
    <h1>Submit and view Claims</h1>
    <div class="container">
      
        <div class="row">
            <div class="column1">
                <h2>Submit a Claim:</h2>
                <form id="claimForm" method="post" action="@Url.Action("SubmitClaim", "Claim")" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="month">Claim Month:</label>
                        <input type="month" id="month" name="claimMonth" required />
                    </div>
                    <div class="form-group">
                        <label for="hoursWorked">Total Hours Worked:</label>
                        <input type="number" id="hoursWorked" name="hoursWorked" required />
                    </div>
                    <div class="form-group">
                        <label for="hourlyRate">Hourly Rate:</label>
                        <input type="number" id="hourlyRate" name="hourlyRate" required />
                    </div>
                    <div class="form-group">
                        <label for="supportingDocuments">Supporting Documents (optional):</label>
                        <input type="file" id="supportingDocuments" name="supportingDocument" multiple />
                    </div>
                    <button type="submit">Submit Claim</button>
                </form>
            </div>

            <div class="column">
                <h2>View your Claims:</h2>

                <table>
                    <thead>
                        <tr>
                            <th>Claim ID</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>Documents</th>
                            <th>Claim Month</th>
                            <th>Submission Date</th>
                            

                        </tr>
                    </thead>
                   <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td>No. @claim.claimID</td>
                                    <td>R @claim.claimAmount</td>
                                    <td>@claim.claimStatus</td>
                                    <td>
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            foreach (var document in claim.Documents)
                                            {
                                                <div>
                                                    <form asp-action="DownloadDocument" method="get">
                                                        <input type="hidden" name="documentId" value="@document.documentID" />
                                                        <button type="submit" class="action-buttons">Download Document</button>
                                                    </form>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            <span>No Documents</span>
                                        }
                                    </td>
                                    <td>@claim.claimMonth.ToString("MMMM yyyy")</td>
                                    <td>@claim.submissionDate.ToString("dd MMM yyyy")</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">No claims available.</td>
                            </tr>
                        }
                   </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
