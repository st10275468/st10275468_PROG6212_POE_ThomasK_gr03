@model List<st10275468_PROG6212_POE_ThomasK_gr03.Models.Claim>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <style>
        body {
            background-color: teal;
            color: white;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            margin: 0 auto;
            width: 90%;
        }

        h1 {
            text-align: center;
            padding-top: 30px;
            font-size: 55px;
        }

        .filter-section {
            margin: 20px 0;
            display: flex;
            justify-content: flex-start;
            align-items: center;
        }

            .filter-section label {
                font-size: 18px;
                margin-right: 10px;
                color: white;
            }

            .filter-section select {
                padding: 10px;
                border: 1px solid teal;
                border-radius: 4px;
                background-color: white;
                color: teal;
                width: 200px;
            }

        .claims-table {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .claims-table h2 {
                color: teal;
                margin-bottom: 10px;
            }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 8px;
            text-align: left;
            color: black;
            border: 1px solid teal;
            white-space: nowrap;
        }

        th {
            background-color: teal;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #ddd;
        }

       
        table td {
            padding: 6px;
        }

        
        .action-buttons {
            background-color: teal;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            margin-right: 5px;
        }

            .action-buttons h3 {
                color: teal;
                margin-bottom: 10px;
            }

            .action-buttons button {
                background-color: teal;
                color: white;
                border: none;
                padding: 4px 8px;
                border-radius: 4px;
                cursor: pointer;
                font-size: 10px;
                margin-right: 5px;
            }

                .action-buttons button:hover {
                    background-color: darkcyan;
                }

       
        .details-button {
            background-color: teal;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 12px;
        }

            .details-button:hover {
                background-color: darkcyan;
            }
        /*  OpenAI.2024. Chat-GPT(Version 3.5).[Large language model]. Available at: https://chat.openai.com/[Accessed: 9 September 2024]. */
    </style>
</head>
<body>
    <h1>Review Claims</h1>

    <div class="container">
       
        
         <div class="claims-table">
            <h2>Submitted Claims</h2>
            <table>
                <thead>
                    <tr>
                        <th>Claim ID</th>
                        <th>Lecturer</th>
                        <th>Claim Month</th>
                        <th>Claim Amount</th>
                        <th>Submission Date</th>
                        <th>Documents</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var claim in Model)
                        {
                            <tr id="claim-row-@claim.claimID">
                                <td>@claim.claimID</td>
                                <td>@claim.User.name @claim.User.surname</td>
                                <td>@claim.claimMonth.ToString("MMMM yyyy")</td>
                                <td>R @claim.claimAmount</td>
                                <td>@claim.submissionDate.ToString("dd MMM yyyy")</td>
                                <td>@claim.claimStatus</td>
                                <td> 
                                    <form asp-action="ApproveClaim" method="post">
                                        <input type="hidden" name="claimID" value="@claim.claimID" />
                                        <button type="submit" class="action-buttons approve">Approve</button>
                                    </form>
                                    <form asp-action="DenyClaim" method="post">
                                        <input type="hidden" name="claimID" value="@claim.claimID" />
                                        <button type="submit" class="action-buttons deny">Deny</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">No claims available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
    </div>
    
</body>
</html>
